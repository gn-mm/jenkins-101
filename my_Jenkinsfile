pipeline {
    agent {
        node {
            label 'windows-rpas'
        }
    }
    triggers {
        pollSCM 'H/1 * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                echo "Installing python libraries..."
                python -m venv .venv
                .\.venv\Scripts\activate
                cd myapp
                pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                echo "Testing..."
                .\.venv\Scripts\activate
                cd myapp
                python hello.py
                python hello.py --name=Jenkins
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver..'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}
