pipeline {
    agent {
        node {
            label 'docker-agent-python'
        }
    }
    triggers {
        pollSCM 'H/1 * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                echo "Installing python libraries..."
                python3 -m venv .venv
                source .venv/bin/activate
                cd myapp
                pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                echo "Testing..."
                source .venv/bin/activate
                cd myapp
                python3 hello.py
                python3 hello.py --name=Jenkins
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver..'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}
